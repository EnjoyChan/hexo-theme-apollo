extends partial/layout

block site_title
    if page.category
       != page.category + " | " + config.title
    if page.tag
       != page.tag + " | " + config.title
    if page.archive
       != __('archive') + " | " + config.title

block container
    if page.category || page.tag
        h1.label-title=  page.category || page.tag
    include mixins/post
    +postsList()
    

block pagination
    include mixins/paginator
    +home()

